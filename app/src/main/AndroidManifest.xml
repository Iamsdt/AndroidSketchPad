<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.iamsdt.androidsketchpad">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/my_app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name=".ui.SplashScreen"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ui.services.UpdateService"
            android:exported="false"
            android:enabled="true" />

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/my_app"
            android:theme="@style/LibraryAppTheme.NoActionBar"/>

        <activity android:name=".ui.AppIntro"
            android:theme="@style/LibraryAppTheme.NoActionBar"/>
        <activity android:name=".ui.details.DetailsActivity"
            android:theme="@style/LibraryAppTheme.NoActionBar"/>
    </application>

</manifest>